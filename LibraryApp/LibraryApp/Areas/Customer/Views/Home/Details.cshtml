@model Product

<form method="post">
	<div class="card shadow border-0 mt-4 mb-4">
		<div class="card-header bg-secondary bg-gradient text-light py-4">
			<div class="row">
				<div class="col-12 text-center">
					<h3 class="text-dark text-uppercase">@Model.Title</h3>
					<p class="text-dark fw-semibold mb-0">by @Model.Author</p>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="py-3">

				<div class="row">
					<div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
						<img src="~/@Model.ImageUrl" width="100%" class="rounded" />
					</div>
					<div class="col-12 col-lg-6 offset-lg-1">

						<div class="col-12 col-md-6 pb-4">
							<span class="badge rounded-pill bg-warning">@Model.Category.Name</span>
						</div>
						<div class="row">
							<h6 class="text-dark text-opacity-50 ">ISBN : @Model.ISBN</h6>
						</div>

						<div class="row my-3">
							<p class="text-secondary lh-sm">@Html.Raw(Model.Description)</p>
						</div>
						<div class="row mb-3">
							<div class="input-group mb-3">
								<span class="input-group-text" id="basic-addon1">Count</span>
								<input type="number" value="1" class="form-control" aria-label="Username" aria-describedby="basic-addon1">
							</div>
						</div>
						<div class="row ps-3 mb-3 ">
							<div class="p-1 col-3 col-lg-2 ">
								<div>
									<h5>Price:</h5>
								</div>
							</div>
							<div class="p-1 col-3 col-lg-2 ">
								<div>
									<h5>@Model.Price.ToString("c")</h5>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-6 col-md-6 pb-1">
								<button type="submit" class="btn btn-dark w-100 py-2 text-uppercase fw-semibold">
									Add to Cart
								</button>
							</div>
							<div class="col-6 col-md-6 pb-1">
								<a asp-action="Index" class="btn btn-light w-100 py-2 text-uppercase fw-semibold">
									<small>Back to list</small>
								</a>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</form>