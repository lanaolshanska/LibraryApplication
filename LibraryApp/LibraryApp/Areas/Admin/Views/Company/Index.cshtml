@model List<Company>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Company List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Company" asp-action="CreateOrUpdate" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i>  Create New Company
			</a>
		</div>
	</div>
	<table id="tblData" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>Name</th>
				<th>State</th>
				<th>City</th>
				<th>Address</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>
@section Scripts {
	<script src="~/js/company.js"></script>
}